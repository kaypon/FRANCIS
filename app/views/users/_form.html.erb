    <%= form.text_field :last_name, id: :user_last_name %>
  </div>

  <div class="field">
    <%= form.label :DOB %>
    <%= form.date_select :DOB, id: :user_DOB %>
  </div>

  <div class="field">
    <%= form.label :passport_num %>
    <%= form.number_field :passport_num, id: :user_passport_num %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, id: :user_password %>
  </div>

